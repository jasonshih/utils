#!/bin/bash

worker=(etu-12 etu-13)
#worker=(etu-13)

for i in `echo ${worker[@]}`
do
 echo "restart regionserver of worker: $i"
 ssh $i "/opt/hbase/bin/hbase-daemon.sh stop regionserver ; sleep 2 ; /opt/hbase/bin/hbase-daemon.sh start regionserver"
done

